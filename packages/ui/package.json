{
  "name": "@monorepo/ui",
  "version": "0.1.8",
  "type": "module",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/ui.es.js",
  "module": "./dist/ui.umd.cjs",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ui.es.js",
      "require": "./dist/ui.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "vitest",
    "build": "tsc && vite build",
    "prepack": "json -f package.json -I -e 'delete this.devDependencies;' && clean-package",
    "postpack": "clean-package restore",
    "prepare": "tsc && vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint": "tsc && yarn lint:eslint",
    "format": "prettier --write 'src/**/*.{ts,tsx}' && yarn lint:eslint --fix",
    "format:check": "prettier -c 'src/**/*.{ts,tsx}'",
    "generate:sx": "lerna run generate:sx --scope @monorepo/scripts"
  },
  "dependencies": {
    "@emotion/css": "^11.11.2",
    "classnames": "^2.3.2"
  },
  "peerDependencies": {
    "@monorepo/styles": "^0.1.0",
    "react": ">=18"
  },
  "devDependencies": {
    "@monorepo/eslint-config": "0.1.5",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.5.3",
    "@storybook/builder-vite": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^18.2.37",
    "@vitejs/plugin-react": "^4.0.4",
    "clean-package": "^2.2.0",
    "eslint": "^8.47.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jsdom": "^22.1.0",
    "json": "^11.0.0",
    "lerna": "^7.4.2",
    "prettier": "^3.0.3",
    "sass": "^1.66.1",
    "storybook": "^7.5.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2",
    "vitest": "^0.34.6"
  }
}
